@model Aircraft

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="text-primary">
                Delete Aircraft
            </h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="Name" class="my-2"></label>
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="Manufacturer" class="my-2"></label>
                    <input asp-for="Manufacturer" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="DateRegistered" class="my-2"></label>
                    <input asp-for="DateRegistered" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="SerialNumber" class="my-2"></label>
                    <input asp-for="SerialNumber" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="OriginalPrice" class="my-2"></label>
                    <input asp-for="OriginalPrice" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="TravelRange" class="my-2"></label>
                    <input asp-for="TravelRange" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="MaxCruiseSpeed" class="my-2"></label>
                    <input asp-for="MaxCruiseSpeed" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="FuelEconomy" class="my-2"></label>
                    <input asp-for="FuelEconomy" disabled class="form-control" />
                </div>
                <div class="row my-2 px-lg-4 px-md-3">
                    <label asp-for="TotalNoOfSeats" class="my-2"></label>
                    <input asp-for="TotalNoOfSeats" disabled class="form-control" />
                </div>
                <div class="row my-4 align-content-center justify-content-center">
                    <div class="btn-group w-75 align-content-center justify-content-center">
                        <button type="submit" class="btn btn-danger mx-2">
                            Delete Aircraft
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary mx-2">
                            Go Back To List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>