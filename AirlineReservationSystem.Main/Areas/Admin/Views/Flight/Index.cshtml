@model IEnumerable<Flight>

<div class="container">
    <div class="row">
        <div class="col-6 mt-3">
            <h2 class="text-primary">
                List of Flights
            </h2>
        </div>
        <div class="col-6 text-end mt-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Flight
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped my-4">
        <thead>
            <tr>
                <th>
                    Flight ID
                </th>
                <th>
                    Flight Aircraft
                </th>
                <th>
                    Origin Airport
                </th>
                <th>
                    Destination Airport
                </th>
                <th>
                    Departure Time
                </th>
                <th>
                    Arrival Time
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Aircraft.Name
                    </td>
                    <td>
                        @obj.OriginAirport.Name
                    </td>
                    <td>
                        @obj.DestinationAirport.Name
                    </td>
                    <td>
                        @obj.DepartureTime
                    </td>
                    <td>
                        @obj.ArrivalTime
                    </td>
                    <td>
                        <div class="btn-group w-100 align-content-center justify-content-center" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-info mx-2">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-x-square"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>